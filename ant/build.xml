<project name="root_template" default="build_release">
    <property file="build.properties" />
    <condition property="is.windows">
        <os family="windows" />
    </condition>
    <condition property="is.mac">
        <os family="mac" />
    </condition>
    <condition property="is.unix">
        <os family="unix" />
    </condition>
    <target name="update_submodule">
        <exec executable="git" failonerror="true">
            <arg line="submodule init" />
        </exec>
        <exec executable="git" failonerror="true">
            <arg line="submodule update" />
        </exec>
    </target>
    <target name="clean_make_codecoverage" unless="is.windows">
        <ant dir="external" target="clean_make_codecoverage" />
        <ant dir="src" target="clean_make_codecoverage" />
        <ant dir="unittest" target="clean_make_codecoverage" />
    </target>
    <target name="clean_make_debug" unless="is.windows">
        <ant dir="external" target="clean_make_debug" />
        <ant dir="src" target="clean_make_debug" />
        <ant dir="unittest" target="clean_make_debug" />
    </target>
    <target name="clean_make_release" unless="is.windows">
        <ant dir="external" target="clean_make_release" />
        <ant dir="src" target="clean_make_release" />
        <ant dir="unittest" target="clean_make_release" />
    </target>
    <target name="clean_vc08_codecoverage" if="is.windows">
        <ant dir="external" target="clean_vc08_codecoverage" />
        <ant dir="src" target="clean_vc08_codecoverage" />
        <ant dir="unittest" target="clean_vc08_codecoverage" />
    </target>
    <target name="clean_vc08_debug" if="is.windows">
        <ant dir="external" target="clean_vc08_debug" />
        <ant dir="src" target="clean_vc08_debug" />
        <ant dir="unittest" target="clean_vc08_debug" />
    </target>
    <target name="clean_vc08_release" if="is.windows">
        <ant dir="external" target="clean_vc08_release" />
        <ant dir="src" target="clean_vc08_release" />
        <ant dir="unittest" target="clean_vc08_release" />
    </target>
    <target name="build_make_codecoverage" unless="is.windows">
        <ant dir="external" target="build_make_codecoverage" />
        <ant dir="src" target="build_make_codecoverage" />
        <ant dir="unittest" target="build_make_codecoverage" />
    </target>
    <target name="build_make_debug" unless="is.windows">
        <ant dir="external" target="build_make_debug" />
        <ant dir="src" target="build_make_debug" />
        <ant dir="unittest" target="build_make_debug" />
    </target>
    <target name="build_make_release" unless="is.windows">
        <ant dir="external" target="build_make_release" />
        <ant dir="src" target="build_make_release" />
        <ant dir="unittest" target="build_make_release" />
    </target>
    <target name="build_vc08_codecoverage" if="is.windows">
        <ant dir="external" target="build_vc08_codecoverage" />
        <ant dir="src" target="build_vc08_codecoverage" />
        <ant dir="unittest" target="build_vc08_codecoverage" />
    </target>
    <target name="build_vc08_debug" if="is.windows">
        <ant dir="external" target="build_vc08_debug" />
        <ant dir="src" target="build_vc08_debug" />
        <ant dir="unittest" target="build_vc08_debug" />
    </target>
    <target name="build_vc08_release" if="is.windows">
        <ant dir="external" target="build_vc08_release" />
        <ant dir="src" target="build_vc08_release" />
        <ant dir="unittest" target="build_vc08_release" />
    </target>
    <target name="unittest_make_codecoverage" unless="is.windows">
        <ant dir="external" target="unittest_make_codecoverage" />
        <ant dir="src" target="unittest_make_codecoverage" />
        <ant dir="unittest" target="unittest_make_codecoverage" />
    </target>
    <target name="unittest_make_debug" unless="is.windows">
        <ant dir="external" target="unittest_make_debug" />
        <ant dir="src" target="unittest_make_debug" />
        <ant dir="unittest" target="unittest_make_debug" />
    </target>
    <target name="unittest_make_release" unless="is.windows">
        <ant dir="external" target="unittest_make_release" />
        <ant dir="src" target="unittest_make_release" />
        <ant dir="unittest" target="unittest_make_release" />
    </target>
    <target name="unittest_vc08_codecoverage" if="is.windows">
        <ant dir="external" target="unittest_vc08_codecoverage" />
        <ant dir="src" target="unittest_vc08_codecoverage" />
        <ant dir="unittest" target="unittest_vc08_codecoverage" />
    </target>
    <target name="unittest_vc08_debug" if="is.windows">
        <ant dir="external" target="unittest_vc08_debug" />
        <ant dir="src" target="unittest_vc08_debug" />
        <ant dir="unittest" target="unittest_vc08_debug" />
    </target>
    <target name="unittest_vc08_release" if="is.windows">
        <ant dir="external" target="unittest_vc08_release" />
        <ant dir="src" target="unittest_vc08_release" />
        <ant dir="unittest" target="unittest_vc08_release" />
    </target>
    <target name="clean_codecoverage" depends="clean_make_codecoverage,clean_vc08_codecoverage" />
    <target name="clean_debug" depends="clean_make_debug,clean_vc08_debug" />
    <target name="clean_release" depends="clean_make_release,clean_vc08_release" />
    <target name="build_codecoverage" depends="build_make_codecoverage,build_vc08_codecoverage" />
    <target name="build_debug" depends="build_make_debug,build_vc08_debug" />
    <target name="build_release" depends="build_make_release,build_vc08_release" />
    <target name="unittest_codecoverage" depends="unittest_make_codecoverage,unittest_vc08_codecoverage" />
    <target name="unittest_debug" depends="unittest_make_debug,unittest_vc08_debug" />
    <target name="unittest_release" depends="unittest_make_release,unittest_vc08_release" />
</project>
